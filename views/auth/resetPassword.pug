extends ../layout/index 

block contenido
    .py-10  
        h1.text-4xl.my-10.font-extrabold.text-center Bienes
            span.font-normal Raices 
        h3.text-center.text-3xl.font-extrabold= pagina

        if errores 
            div(class="max-w-md mx-auto my-10")
                each error in errores 
                    p.bg-red-600.text-black-600.uppercase.text-xs.text-center.p-2.mb-1.font-bold= error.msg

        .mt-8.mx-auto.max-w-md 
            .bg-white.py-8.px-4.shadow-2xl.rounded-xl.shadow-lime-500
                form.space-y-5(method="POST" noValidate)
                    input(type="hidden" name="_csrf" value= csrfToken)
                    div 
                        label.block.text-sm.uppercase.text-gray-500.mb-3.font-bold(for="password") Coloca un Nuevo Password 
                        input.password.w-full.px-3.py-2.border.border-gray-300.rounded-md.placehoder-gray-200(placeholder="Nuevo Password" type="password" name="password")
                   
                    input(class="w-full bg-lime-500 hover:bg-lime-600 text-black font-bold py-3 cursor-pointer rounded-xl" type="submit" value="Guardar Password")