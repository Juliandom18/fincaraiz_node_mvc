extends ../layout/index

block  contenido
    .py-0
        h1.text-4xl.my-0.font-extrabold.text-center Bien
            span.font-normal Raiz
        h3.text-center.text-3xl.font-extrabold.my-5= pagina

        if errores
            div(class='max-w-md mx-auto my-10')
                each error in errores
                    p.bg-red-600.text-black.uppercase.text-xs.text-center.p-2.mb-1.font-bold= error.msg

        .mt-3.mx-auto.max-w-md
            .bg-white.py-5.px-4.shadow-2xl.rounded-xl.shadow-lime-500
                form.space-y-5(method="POST" action="/auth/registro" noValidate)
                    input(type="hidden" name="_csrf" value= csrfToken)
                    div
                        label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for="nombre") Tu nombre
                        input.nombre.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-200(placeholder="nombre" type="text" name="nombre")
                    div
                        label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for="email") Tu email
                        input.nombre.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-200(placeholder="email" type="text" name="email")
                    div 
                        label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for="password") Tu password
                        input.nombre.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-200(placeholder="password" type="password" name="password")
                    div 
                        label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for="password") Repetir password
                        input.nombre.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-200(placeholder="Repetir password" type="password" name="repetir_password")

                    div.flex.items-center.justify-between
                        a.text-gray-500.text-xs(href="/auth/login") ¿Ya tienes cuenta? Inicia Sesión
                        a.text-gray-500.text-xs(href="/auth/olvidepassword") Olvide Password
                    input(class="w-full bg-lime-500 hover:bg-lime-600 hover:scale-95 text-black font-bold py-3 cursor-pointer rounded-lg" type="submit" value="Crear Cuenta")